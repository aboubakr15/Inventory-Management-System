<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="375.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lightsaberInventory.View.ChangePasswordController">
    <children>
        <Label alignment="CENTER" layoutY="48.0" prefHeight="22.0" prefWidth="375.0" text="Change Password">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button layoutX="281.0" layoutY="415.0" mnemonicParsing="false" onAction="#close" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: red;" text="Cancel" />
        <Button layoutX="136.0" layoutY="318.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="30.0" prefWidth="104.0" text="Save" />
      <HBox layoutX="34.0" layoutY="147.0" prefHeight="25.0" prefWidth="308.0">
         <children>
              <Label prefHeight="26.0" prefWidth="115.0" text="Old Password:">
                  <font>
                      <Font size="15.0" />
                  </font>
              </Label>
              <TextField fx:id="oldPasswordField" prefHeight="22.0" prefWidth="196.0" />
         </children>
      </HBox>
      <HBox layoutX="34.0" layoutY="204.0" prefHeight="25.0" prefWidth="308.0">
         <children>
            <Label prefHeight="27.0" prefWidth="115.0" text="New Password:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="newPasswordField" prefHeight="25.0" prefWidth="198.0" />
         </children>
      </HBox>
      <HBox layoutX="34.0" layoutY="250.0" prefHeight="25.0" prefWidth="308.0">
         <children>
            <Label prefHeight="25.0" prefWidth="115.0" text="Confirm Password:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="confirmPasswordField" prefHeight="25.0" prefWidth="203.0" />
         </children>
      </HBox>
    </children>
</AnchorPane>
